{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Current Bun Test",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["test", "--runInBand"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Jest Test (Node)",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["${file}", "--runInBand"],
      "console": "integratedTerminal"
    }
  ]
}
